<UserControl x:Class="WpfApp1.UserControls.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.UserControls"
             mc:Ignorable="d" 
                             d:DesignHeight="300" d:DesignWidth="300">

    <StackPanel>
        <Menu VerticalAlignment="Top" Background="{x:Null}">
            <MenuItem Header="_File">
                <MenuItem Header="_New project"  />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
            
            <MenuItem Header="_Branch" Name="BanchMenuBtn" Click="BanchMenuBtn_Click" />
            <MenuItem Header="_Remote" />
            <MenuItem Header="_Help"/>

        </Menu>
    </StackPanel>

</UserControl>