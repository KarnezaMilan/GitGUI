<UserControl x:Class="WpfApp1.UserControls.StatusGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.UserControls"
             xmlns:l="clr-namespace:WpfApp1.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="640">


    <DockPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <WrapPanel Grid.Row="0" Background="LightBlue">
                <Label DockPanel.Dock="Left" Width="50">Stage</Label>
            </WrapPanel>

            <DockPanel Grid.Row="1">
                <Grid>
                    <DataGrid CanUserAddRows="False" AutoGenerateColumns="False" BorderThickness="0" Name="StageFilesDataGrid" ItemsSource="{Binding ListFileStage}" SelectedItem="{Binding MySelectedItem, Mode=TwoWay}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Path=Status, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Header="St" />
                            <DataGridTextColumn Binding="{Binding Path=FileName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Header="Filename" Width="*"  />
                            <DataGridTextColumn Binding="{Binding Path=Size, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Header="Size"/>
                            <DataGridTextColumn Binding="{Binding Path=IsBinary, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Header="Binary" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </DockPanel>

            <WrapPanel Grid.Row="2" Background="LightBlue">
                <Label DockPanel.Dock="Left" Width="50">Unstage</Label>

            </WrapPanel>

            <DockPanel Grid.Row="3">
                <Grid>
                    <DataGrid CanUserAddRows="False" AutoGenerateColumns="False" BorderThickness="0" Name="UnStageFilesDataGrid" ItemsSource="{Binding ListFileUnstage}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Path=Status}" Header="St" />
                            <DataGridTextColumn Binding="{Binding Path=FileName}" Header="Filename" Width="*"  />
                            <DataGridTextColumn Binding="{Binding Path=Size}" Header="Size"/>
                            <DataGridTextColumn Binding="{Binding Path=IsBinary}" Header="Binary" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </DockPanel>
        </Grid>
    </DockPanel>
    
    
</UserControl>