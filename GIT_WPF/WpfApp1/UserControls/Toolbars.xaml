<UserControl x:Class="WpfApp1.UserControls.Toolbars"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="605">

    <StackPanel>
        <WrapPanel>
            <WrapPanel Margin="4,0,0,0">
                <Button IsEnabled="False">
                    <StackPanel>
                        <Image Stretch="None" />
                        <TextBlock>Settings</TextBlock>
                    </StackPanel>
                </Button>

                <Separator Width="30" Height="1"/>

                <Button Command="{Binding CreateBranchCommand}">
                    <StackPanel>
                        <Image Stretch="None" />
                        <TextBlock>Branch</TextBlock>
                    </StackPanel>
                </Button>
                <Button IsEnabled="False">
                    <StackPanel>
                        <Image Stretch="None" />
                        <TextBlock>Stash</TextBlock>
                    </StackPanel>
                </Button>
                <Button IsEnabled="False">
                    <StackPanel>
                        <Image Stretch="None" />
                        <TextBlock>Search</TextBlock>
                    </StackPanel>
                </Button>
                <Button IsEnabled="False">
                    <StackPanel>
                        <Image Stretch="None" />
                        <TextBlock>Statistics</TextBlock>
                    </StackPanel>
                </Button>

                <Separator Width="30" Height="1" />

                <Button IsEnabled="False">
                    <StackPanel>
                        <Image Stretch="None" />
                        <TextBlock>Fetch</TextBlock>
                    </StackPanel>
                </Button>
                <Button IsEnabled="False">
                    <StackPanel>
                        <Image Stretch="None" />
                        <TextBlock>Pull</TextBlock>
                    </StackPanel>
                </Button>
                <Button IsEnabled="False">
                    <StackPanel>
                        <Image  Stretch="None" />
                        <TextBlock>Push</TextBlock>
                    </StackPanel>
                </Button>
            </WrapPanel>
        </WrapPanel>
    </StackPanel>

</UserControl>
