<UserControl x:Class="WpfApp1.UserControls.Toolbars"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="605">

    <StackPanel>
        <WrapPanel>
            <WrapPanel Margin="4,0,0,0">
                <Button IsEnabled="False">
                    <StackPanel>
                        <Image Stretch="None" />
                        <TextBlock>Settings</TextBlock>
                    </StackPanel>
                </Button>

                <Separator Width="30" Height="1"/>

                <Button>
                    <StackPanel>
                        <TextBlock>Branch</TextBlock>
                    </StackPanel>
                </Button>


                <Separator Width="30" Height="1" />

                <Button Name="AddBtn" Command="{Binding Path=AddToStageCommand}">
                    <StackPanel>
                        <TextBlock>Add</TextBlock>
                    </StackPanel>
                </Button>
                <Button Name="ResetBtn" Command="{Binding Path=ResetStageCommand}">
                    <StackPanel>
                        <TextBlock>Reset</TextBlock>
                    </StackPanel>
                </Button>
                <Button Name="PullBtn">
                    <StackPanel>
                        <TextBlock>Pull</TextBlock>
                    </StackPanel>
                </Button>
                <Button Name="PushBtn" Command="{Binding Path=PushCommand}">
                    <StackPanel>
                        <TextBlock>Push</TextBlock>
                    </StackPanel>
                </Button>
                <Button Name="RescanBtn" Command="{Binding Path=RescanCommand}">
                    <StackPanel>
                        <TextBlock>Rescan</TextBlock>
                    </StackPanel>
                </Button>
            </WrapPanel>
        </WrapPanel>
    </StackPanel>

</UserControl>
