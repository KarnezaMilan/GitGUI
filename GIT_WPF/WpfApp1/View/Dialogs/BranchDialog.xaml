<Window x:Class="WpfApp1.View.Dialogs.BranchDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.View.Dialogs"
        mc:Ignorable="d"
        Height="150" Width="300" WindowStartupLocation="CenterScreen">
    
    <Grid Background="Black">
        <StackPanel Width="290" Height="116" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource BackGroundStyle}" >
            <Label Content="Please, enter the name: " Margin="15,10,0,0"/>
            <TextBox Width="250" Margin="10,5" Name="NameTextbox" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,10,5,10" >
                <Button Content="OK" Margin="15,0" Width="50" Name="OkBtn" Click="OkBtn_Click"/>
                <!--<Button Content="Cancel" Margin="15,0" Width="50" Name="CancleBtn" Click="CancleBtn_Click"/>-->
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
