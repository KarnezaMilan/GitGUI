<Window x:Class="WpfApp1.View.ViewUC"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.View"
        xmlns:controls="clr-namespace:WpfApp1.UserControls"
        mc:Ignorable="d"
        Icon="../Resource/Logo.ico"
        Title="M-Git" Width="1152" Height="650" WindowStartupLocation="CenterScreen">

    <Grid Margin="0,-1,0,0" Background="#303030"  >
        <StackPanel  Margin="5" Style="{StaticResource BackGroundStyle}">
            
        <DockPanel>
                <!--<controls:MainMenu DockPanel.Dock="Top" Margin="4,4,0,0" />-->
                <controls:Toolbars DockPanel.Dock="Top" Margin="0,20,0,0"/>
                <controls:CenterArea DockPanel.Dock="Right" />
        </DockPanel>
        </StackPanel>
    </Grid>
</Window>